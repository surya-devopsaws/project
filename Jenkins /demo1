pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/surya-devopsaws/qtree.git'
            }
        }
        stage('Deploy to Server') {
            steps {
                sshPublisher(
                    continueOnError: true,
                    failOnError: true,
                    publishers: [
                        sshPublisherDesc(
                            configName: 'terraform',
                            verbose: true,
                            transfers: [
                                sshTransfer(
                                    sourceFiles: '**/*',
                                    remoteDir: '',
                                    execCommand: ''
                                )
                            ]
                        )
                    ]
                )
            }
        }
    }
}
