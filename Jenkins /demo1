
pipeline {
    agent any
    

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Checkout code from Git
                    checkout([$class: 'GitSCM',
                              branches: [[name: 'master']],
                              userRemoteConfigs: [[url: 'https://github.com/surya-devopsaws/qtree.git',
                                                  credentialsId: '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']]]
                    )
                }
            }
        }

        stage('Build') {
            steps {
                
            }
        }



        stage('Deploy') {
            steps {
                // Deploy your application using sshPublisher
                sshPublisher(publishers: [sshPublisherDesc(
                    configName: 'terraform',
                    transfers: [sshTransfer(
                        cleanRemote: false,
                        excludes: '',
                        execCommand: '',
                        flatten: false,
                        makeEmptyDirs: false,
                        noDefaultExcludes: false,
                        patternSeparator: '[, ]+',
                        remoteDirectory: '/',
                        remoteDirectorySDF: false,
                        removePrefix: '',
                        sourceFiles: '', 
                    usePromotionTimestamp: false,
                    useWorkspaceInPromotion: false,
                    verbose: false
                )])
            
        }
      
    
}
